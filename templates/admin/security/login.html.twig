{% extends 'admin/base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="col-lg-6 offset-lg-3 login-form">
        <div class="card">
            <div class="card-header">
                <div class="card-title text-center">Podaj hasło przyjacielu i wejdź</div>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        </div>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="row">
                        <div class="col-lg-5">
                            <input name="email" type="text" class="form-control" placeholder="e-mail" value="{{ last_username }}" required autofocus>
                        </div>
                        <div class="col-lg-5">
                            <input name="password" type="password" class="form-control" placeholder="hasło" required>
                        </div>
                        <div class="col-lg-2">
                            <button class="btn btn-success btn-block submit" type="submit">
                                <span class="fas fa-chevron-right"></span>
                            </button>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="row">
                        <div class="checkbox col-lg-12 text-left login-form-remember-me">
                            <label>
                                <input type="checkbox" name="_remember_me"> Zapamiętaj mnie
                            </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
